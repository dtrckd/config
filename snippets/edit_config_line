#!/bin/bash

#Â https://stackoverflow.com/questions/20267910/how-to-add-a-line-in-sed-if-not-match-is-found

name=${1//\//\\/}
value=${2//\//\\/}

CONFIG_FILE="$3"
SEP=" "

sed -i \
	-e '/^#\?\(\s*'"${name}"'\s*${SEP}\s*\).*/{s//\1'"${value}"'/;:a;n;ba;q}' \
	-e '$a'"${name}$SEP${value}" $CONFIG_FILE
